<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#141412"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_gravity="center_horizontal"
                android:background="#3d3d3d"

                app:titleTextColor="#fff">

            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/car1" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/hotspot" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_165sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/notes" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_230sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/car2" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:src="@drawable/car2" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:src="@drawable/hotspot" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_165sdp"
                android:layout_marginTop="@dimen/_63sdp"
                android:src="@drawable/notes" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_230sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:src="@drawable/car2"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:text="All"
                android:textColor="#fff"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_99sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:text="Live"
                android:textColor="#fff"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_155sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:text="Inventory"
                android:textColor="#fff"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_230sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:text="Deals"
                android:textColor="#fff"
                android:textSize="@dimen/_16ssp" />

        </FrameLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="#51514E">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/frame1"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/hyundai" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#d90300"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:text="Live" />
                </FrameLayout>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/frame1"
                    android:text="2012 Audi Q59705 KM GCC"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_12ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_toRightOf="@+id/frame1"
                    android:fontFamily="sans-serif-black"
                    android:text="TIME LEFT"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:layout_toRightOf="@+id/frame1"
                    android:text="0d:0h:0m 40s"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/bid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time"
                    android:layout_toRightOf="@+id/frame1"
                    android:fontFamily="sans-serif-black"
                    android:text="CURRENT BID"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_11ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bid"
                    android:layout_toRightOf="@+id/frame1"
                    android:text="AED3300"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_14ssp" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="#51514E">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <FrameLayout
                    android:id="@+id/frame2"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/blackaudi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#15ad01"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:text="Live" />
                </FrameLayout>

                <TextView
                    android:id="@+id/content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/frame2"
                    android:text="2012 Audi Q59705 KM GCC"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_12ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_toRightOf="@+id/frame2"
                    android:fontFamily="sans-serif-black"
                    android:text="TIME LEFT"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:layout_toRightOf="@+id/frame2"
                    android:text="0d:0h:0m 40s"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/bid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time1"
                    android:layout_toRightOf="@+id/frame2"
                    android:fontFamily="sans-serif-black"
                    android:text="CURRENT BID"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_11ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bid1"
                    android:layout_toRightOf="@+id/frame2"
                    android:text="AED3300"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_14ssp" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="#51514E">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/frame3"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/sports" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#d90300"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:text="Inventory" />
                </FrameLayout>

                <TextView
                    android:id="@+id/content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/frame3"
                    android:text="2012 Audi Q59705 KM GCC"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_12ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_toRightOf="@+id/frame3"
                    android:fontFamily="sans-serif-black"
                    android:text="TIME LEFT"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:layout_toRightOf="@+id/frame3"
                    android:text="0d:0h:0m 40s"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/bid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time2"
                    android:layout_toRightOf="@+id/frame3"
                    android:fontFamily="sans-serif-black"
                    android:text="CURRENT BID"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_11ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bid2"
                    android:layout_toRightOf="@+id/frame3"
                    android:text="AED3300"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="#51514E">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/frame4"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/hyundai" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#d90300"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:text="Inventory" />
                </FrameLayout>

                <TextView
                    android:id="@+id/content3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/frame4"
                    android:text="2012 Audi Q59705 KM GCC"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_12ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_toRightOf="@+id/frame4"
                    android:fontFamily="sans-serif-black"
                    android:text="TIME LEFT"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:layout_toRightOf="@+id/frame4"
                    android:text="0d:0h:0m 40s"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/bid3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time3"
                    android:layout_toRightOf="@+id/frame4"
                    android:fontFamily="sans-serif-black"
                    android:text="CURRENT BID"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_11ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bid3"
                    android:layout_toRightOf="@+id/frame4"
                    android:text="AED3300"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>

        </LinearLayout>
         </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/design"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/item">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
